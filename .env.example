# =====================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =====================================================
# Configuración de WhatsApp Business API
# IMPORTANTE: Nunca comprometas información sensible en producción

# Versión de Graph API (no cambiar generalmente)
WHATSAPP_GRAPH_VERSION=v20.0

# Idioma por defecto para plantillas
WHATSAPP_DEFAULT_LANGUAGE=es_MX

# Timeout para requests (segundos)
WHATSAPP_REQUEST_TIMEOUT=30

# Configuración de seguridad
WHATSAPP_ENCRYPT_TOKENS=true
WHATSAPP_TOKEN_CACHE_TTL=3600
WHATSAPP_VALIDATE_TOKEN_ON_USE=true

# Configuración de logs (cuidado con información sensible)
WHATSAPP_LOG_REQUESTS=true
WHATSAPP_LOG_RESPONSES=false
WHATSAPP_LOG_PHONE_NUMBERS=false
WHATSAPP_LOG_TOKENS=false

# Rate limiting (límites de envío)
WHATSAPP_RATE_LIMITING=true
WHATSAPP_MAX_PER_MINUTE=100
WHATSAPP_MAX_PER_HOUR=1000
WHATSAPP_MAX_PER_DAY=10000

# Plantillas por defecto
WHATSAPP_DEFAULT_TEMPLATE=saludo
WHATSAPP_PAYMENT_REMINDER_TEMPLATE=saludo
WHATSAPP_WELCOME_TEMPLATE=mensaje_de_bienvenida_climas_del_desierto

# =====================================================
# CONFIGURACIÓN ESPECÍFICA DE EMPRESA
# =====================================================
# En producción, configura estos valores en la base de datos
# En desarrollo, puedes usar el archivo whatsapp.dev.json

# Business Account ID (opcional - puede estar en BD)
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Phone Number ID (opcional - puede estar en BD)
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Access Token (opcional - puede estar en BD)
# WHATSAPP_ACCESS_TOKEN=your_access_token

# Archivo de configuración de desarrollo
WHATSAPP_DEV_CONFIG_FILE=whatsapp.dev.json
