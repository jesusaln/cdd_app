APP_NAME="Climas del Desierto"
APP_ENV=local
APP_KEY=base64:AlytGytYcUJaNcIxIazlUnqnJberl4olGUL6tadhqqA=
APP_DEBUG=true
APP_TIMEZONE=America/Hermosillo
APP_URL=http://localhost:8000

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ===== Logging =====
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===== Base de datos (PostgreSQL - LOCAL) =====
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=cdd
DB_USERNAME=cdd_user
DB_PASSWORD=pon_aqui_una_contraseña_fuerte

# (Referencia: si alguna vez vuelves a SQLite, comenta lo de arriba y descomenta estas dos)
# DB_CONNECTION=sqlite
# DB_DATABASE=C:\laragon\www\cdd-app\database\database.sqlite

# ===== Sesión / Cola / Cache / Archivos =====
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public

# En desarrollo suele usarse sync; en producción cambia a "database" y corre php artisan queue:table && migrate
QUEUE_CONNECTION=sync

# Si usas CACHE en BD asegúrate de correr: php artisan cache:table && migrate
CACHE_STORE=database
CACHE_PREFIX=climas_desierto

# ===== Redis (opcional) =====
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===== Correo (Mailpit local) =====
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===== AWS (opcional/futuro) =====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===== Frontend =====
VITE_APP_NAME="${APP_NAME}"

# ===== Sanctum (Inertia / SPA) =====
SANCTUM_STATEFUL_DOMAINS=localhost:8100,localhost

# ===== Backups =====
BACKUP_DISK=local
BACKUP_PATH=backups/database/
BACKUP_COMPRESSION=true
BACKUP_CLEANUP_ENABLED=true
BACKUP_CLEANUP_DAYS=30
BACKUP_SCHEDULE_ENABLED=false
BACKUP_SCHEDULE_FREQUENCY=daily
BACKUP_SCHEDULE_TIME=02:00

